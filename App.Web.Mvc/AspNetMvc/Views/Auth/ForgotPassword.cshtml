
@{
    Layout = "_Layout";
}
<section class="pt-5 padding-bottom">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3 col-md-8 offset-md-2">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title text-center">Şifremi Unuttum</h4>
                        <form>
                            <div class="form-group">
                                <label for="email">E-posta:</label>
                                <input type="email" class="form-control" id="email" placeholder="E-posta adresinizi girin" required>
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">Şifremi Sıfırla</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

